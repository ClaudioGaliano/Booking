@model IEnumerable<Booking.Preferiti>

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="offers_grid">
                    @foreach (var preferito in Model)
                    {
                        <div class="row justify-content-center mt-5">
                            <div class="col-lg-1 temp_col"></div>
                            <div class="col-lg-3">
                                <div class="img-container">
                                    <div class="hotel-label">
                                        <a href="#">@preferito.Struttura.Nome</a>
                                    </div>
                                    <img src="~/Content/img/@preferito.Struttura.Immagine" alt="immagine non trovata" class="foto-struttura" />
                                </div>
                            </div>
                            <div class="col-lg-8 info-container">
                                <div class="aaa">
                                    <div>
                                        <div class="top">
                                            <p class="prezzo">100$</p>
                                            <div class="offer_reviews">
                                                <div class="offer_reviews_content">
                                                    <div class="offer_reviews_title">very good</div>
                                                    <div class="offer_reviews_subtitle">100 reviews</div>
                                                </div>
                                                <div class="offer_reviews_rating text-center">8.1</div>
                                            </div>
                                        </div>
                                        <div class="rating_r rating_r_5 offers_rating" data-rating="5">
                                            <i class="fa-solid fa-star"></i>
                                            <i class="fa-solid fa-star"></i>
                                            <i class="fa-solid fa-star"></i>
                                            <i class="fa-solid fa-star"></i>
                                            <i class="fa-solid fa-star"></i>
                                        </div>
                                        <p class="offers_text">Suspendisse potenti. In faucibus massa. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam eu convallis tortor. Lorem ipsum dolor sit amet.</p>
                                    </div>
                                    <div class="button book_button">@Html.ActionLink("Dettagli", "DettaglioStruttura", "Struttura", new { id = @preferito.Struttura.IdStruttura }, null)</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
