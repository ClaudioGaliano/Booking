<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Travel</title>
    <link href="~/Content/StyleSheet.css" rel="stylesheet" />
    @*<link href="https:cdnjs.cloudflare.com/ajax/libs/mayer-reset/2.0/reset.min.css" rel="stylesheet" />*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="header">
        <div class="d-flex align-items-end">
            <img src="~/Content/img/logo.png" alt="" class="logo_nav">
            <div class="logotipo">Travel</div>
        </div>

        <input type="checkbox" id="check">
        <label for="check" class="icons">
            <i class="fa-solid fa-bars" id="menu-icon"></i>
            <i class="fa-solid fa-xmark" id="close-icon"></i>
        </label>
        <nav class="my-navbar">
            <a href="@Url.Action("Index", "Home")" style="--i:0" class="nav_link">Home</a>
            @*<a href="@Url.Action("Registrati", "Utente")" style="--i:1">Registrati</a>*@
            <a href="#" style="--i:1" class="nav_link">About</a>
            <a href="#" style="--i:2" class="nav_link">Assistenza</a>

            @if (!User.Identity.IsAuthenticated)
            {
                <a href="@Url.Action("Login", "Home")" style="--i:3" class="nav_link">Accedi</a>
            }
            else
            {
                @*<a href="@Url.Action("Login", "Home")" style="--i:3">@((Session["Utente"] != null) ? Session["Utente"] : "Login")</a>*@
                @*<a href="#" style="--i:3">@Session["Utente"]</a>*@
                <a href="#" style="--i:3" class="nav_link">Struttura</a>
            }
        </nav>
        @*<button id="button">drop</button>*@
        @if (User.Identity.IsAuthenticated)
        {
            <button id="button" class="button-64">
                <span class="full-name">@Session["Utente"]</span>
                <span class="initials" style="display: none;">@Session["Iniziali"]</span>
            </button>
        }
    </header>

    @RenderBody()

    <ul class="drop list" id="drop">
        <li class="option" style="--i:6;">
            <a href="@Url.Action("DatiPersonali", "Utente")">
                <i class="fa-regular fa-user icon"></i>
                <span class="option-text">Gestisci account</span>
            </a>
        </li>
        <li class="option" style="--i:5;">
            <a href="@Url.Action("Storico", "Prenota")">
                <i class="fa-solid fa-earth-americas"></i>
                <span class="option-text">Prenotazioni e viaggi</span>
            </a>
        </li>
        <li class="option" style="--i:4;">
            <i class="fa-solid fa-wallet"></i>
            <span class="option-text">Premi e Wallet</span>
        </li>
        <li class="option" style="--i:3;">
            <i class="fa-regular fa-comment"></i>
            <span class="option-text">Recensioni</span>
        </li>
        <li class="option" style="--i:2;">
            <a href="@Url.Action("Preferiti", "Preferiti")">
                <i class="fa-regular fa-heart"></i>
                <span class="option-text">Preferiti</span>
            </a>
        </li>
        <li class="option" style="--i:1;">
            <a href="@Url.Action("Logout", "Home")">
                <i class="fa-solid fa-right-from-bracket"></i>
                <span class="option-text">Logout</span>
            </a>
        </li>
    </ul>


    <footer class="footer">
        <div class="container">
            <div class="row">

                <div class="col-lg-3 footer_column">
                    <div class="footer_col" style="height: 95%">
                        <div class="footer_content footer_about">
                            <div class="d-flex align-items-end">
                                <img src="~/Content/img/logo.png" alt="" style="height: 60px;">
                                <div class="logotipo">Travel</div>
                            </div>
                            <p class="footer_about_text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus quis vu lputate eros, iaculis consequat nisl. Nunc et suscipit urna. Integer eleme ntum orci eu vehicula pretium.</p>
                            <ul class="footer_social_list ps-0">
                                <li class="footer_social_item"><a href="#"><i class="fa fa-pinterest"></i></a></li>
                                <li class="footer_social_item"><a href="#"><i class="fa fa-facebook-f"></i></a></li>
                                <li class="footer_social_item"><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li class="footer_social_item"><a href="#"><i class="fa fa-dribbble"></i></a></li>
                                <li class="footer_social_item"><a href="#"><i class="fa fa-behance"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 footer_column">
                    <div class="footer_col">
                        <div class="footer_title">blog posts</div>
                        <div class="footer_content footer_blog">

                            <div class="footer_blog_item clearfix">
                                <div class="footer_blog_image"><img src="~/Content/img/Cover.PNG" alt="#"></div>
                                <div class="footer_blog_content">
                                    <div class="footer_blog_title"><a href="#">Travel with us this year</a></div>
                                    <div class="footer_blog_date">Nov 29, 2017</div>
                                </div>
                            </div>

                            <div class="footer_blog_item clearfix">
                                <div class="footer_blog_image"><img src="~/Content/img/Cover.PNG" alt="#"></div>
                                <div class="footer_blog_content">
                                    <div class="footer_blog_title"><a href="#">New destinations for you</a></div>
                                    <div class="footer_blog_date">Nov 29, 2017</div>
                                </div>
                            </div>

                            <div class="footer_blog_item clearfix">
                                <div class="footer_blog_image"><img src="~/Content/img/Cover.PNG" alt="#"></div>
                                <div class="footer_blog_content">
                                    <div class="footer_blog_title"><a href="#">Travel with us this year</a></div>
                                    <div class="footer_blog_date">Nov 29, 2017</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 footer_column">
                    <div class="footer_col">
                        <div class="footer_title">tags</div>
                        <div class="footer_content footer_tags">
                            <ul class="tags_list clearfix list-unstyled">
                                <li class="tag_item"><a href="#">design</a></li>
                                <li class="tag_item"><a href="#">fashion</a></li>
                                <li class="tag_item"><a href="#">music</a></li>
                                <li class="tag_item"><a href="#">video</a></li>
                                <li class="tag_item"><a href="#">party</a></li>
                                <li class="tag_item"><a href="#">photography</a></li>
                                <li class="tag_item"><a href="#">adventure</a></li>
                                <li class="tag_item"><a href="#">travel</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 footer_column">
                    <div class="footer_col">
                        <div class="footer_title">contact info</div>
                        <div class="footer_content footer_contact">
                            <ul class="contact_info_list ps-0">
                                <li class="contact_info_item d-flex flex-row">
                                    <div><div class="contact_info_icon"><img src="~/Content/img/Icons/wifi.png" alt=""></div></div>
                                    <div class="contact_info_text">4127 Raoul Wallenber 45b-c Gibraltar</div>
                                </li>
                                <li class="contact_info_item d-flex flex-row">
                                    <div><div class="contact_info_icon"><img src="~/Content/img/Icons/wifi.png" alt=""></div></div>
                                    <div class="contact_info_text">2556-808-8613</div>
                                </li>
                                <li class="contact_info_item d-flex flex-row">
                                    <div><div class="contact_info_icon"><img src="~/Content/img/Icons/wifi.png" alt=""></div></div>
                                    <div class="contact_info_text"><a href="#" target="_top">contactme@gmail.com</a></div>
                                </li>
                                <li class="contact_info_item d-flex flex-row">
                                    <div><div class="contact_info_icon"><img src="~/Content/img/Icons/wifi.png" alt=""></div></div>
                                    <div class="contact_info_text"><a href="#">www.travel.com</a></div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @*<footer>
            <p>&copy; @DateTime.Now.Year - Applicazione ASP.NET</p>
        </footer>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")

    @RenderSection("scripts", required: false)

    <script src="~/Scripts/myScripts/dropdown.js"></script>
    <script src="~/Scripts/myScripts/modal.js"></script>
    <script src="~/Scripts/myScripts/navButton.js"></script>
    <script src="https://kit.fontawesome.com/a7f72890b8.js" crossorigin="anonymous"></script>
</body>
</html>

